@page "/counter"
@using Tsukinia.Core.PushNotification

<h1>Counter</h1>

<p>Current count: @currentCount</p>

<button class="btn btn-primary" onclick="@IncrementCount">Click me</button>

@functions {
    int currentCount = 0;

    void IncrementCount()
    {
        currentCount+=10;

var pushNotificationManager = new PushNotificationManager();

pushNotificationManager.Send(new PushNotificationData
                {
                    Name = "Notification from Android App",
                    Title = "My title",
                    Body = "Some text" + currentCount
                });

    }
}
